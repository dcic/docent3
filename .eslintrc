{
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-use-before-define": [1, "nofunc"],
        "camelcase": 1,
        "no-alert": 1,
        "no-underscore-dangle": 1,
        "no-mixed-requires": 1
    },
    "env": {
        "browser": true,
        "node": true
    },
    "globals": {
        "angular": true
    }
}
